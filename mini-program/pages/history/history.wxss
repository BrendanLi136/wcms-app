/* Page Background */
page {
    background-color: #F7F8FA;
    font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.container {
    padding: 30rpx;
}

.empty-state {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 400rpx;
    color: #999;
    font-size: 28rpx;
}

/* Card Style */
.record-card {
    background: #FFFFFF;
    border-radius: 20rpx;
    padding: 30rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
    display: flex;
    flex-direction: column;
}

/* Card Header */
.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #F0F0F0;
}

.record-time {
    font-size: 28rpx;
    color: #909399;
    font-weight: 500;
}

/* Status Tags */
.status-tag {
    font-size: 24rpx;
    padding: 6rpx 16rpx;
    border-radius: 8rpx;
    font-weight: 600;
}

.status-success {
    background-color: #E1F3D8;
    color: #67C23A;
}

.status-fail {
    background-color: #FDE2E2;
    color: #F56C6C;
}

.status-pending {
    background-color: #EBEEF5;
    color: #909399;
}

/* Card Body */
.card-body {
    margin-bottom: 20rpx;
}

.info-row {
    display: flex;
    margin-bottom: 12rpx;
    line-height: 1.5;
}

.label {
    width: 140rpx;
    font-size: 28rpx;
    color: #606266;
}

.value {
    flex: 1;
    font-size: 28rpx;
    color: #303133;
    font-weight: 500;
}

.placeholder-text {
    color: #C0C4CC;
    font-style: italic;
}

/* Card Footer */
.card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1rpx solid #FAFAFA;
    padding-top: 20rpx;
    font-size: 26rpx;
    color: #409EFF;
    font-weight: 500;
}

.arrow {
    color: #C0C4CC;
    font-weight: bold;
}
