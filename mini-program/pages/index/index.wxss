/* Page Background */
page {
  background-color: #EBF5FF;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.container {
  padding-bottom: 50rpx;
}

/* Top Banner */
.header-banner {
  width: 100%;
  height: 320rpx;
  background: linear-gradient(180deg, #EBF5FF 0%, #FFFFFF 100%);
  position: relative;
  overflow: hidden;
}

.banner-img {
  width: 100%;
  height: 100%;
  /* Placeholder for the illustration */
  background-color: #dbeeff; 
  display: flex;
  justify-content: center;
  align-items: center;
  color: #88a;
  font-size: 24rpx;
}

/* Main Card */
.form-card {
  background: #FFFFFF;
  margin: -40rpx 30rpx 0;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 10;
}

/* Form Groups */
.form-item {
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.form-label {
  width: 140rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.form-input-box {
  flex: 1;
  border: 1rpx solid #E0E0E0;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.picker-box {
    flex: 1;
    border: 1rpx solid #E0E0E0;
    border-radius: 8rpx;
    padding: 16rpx 20rpx;
    font-size: 28rpx;
    color: #333;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.picker-placeholder {
    color: #888;
}

.form-textarea-box {
  flex: 1;
  border: 1rpx solid #E0E0E0;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  height: 120rpx;
  width: auto;
}

/* Upload Area */
.upload-section {
  margin-top: 40rpx;
}

.upload-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.upload-box {
  width: 100%;
  height: 240rpx;
  background: #F8F9FA;
  border: 2rpx dashed #DCDFE6;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #909399;
  font-size: 26rpx;
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
  background-color: #e0e0e0; /* Placeholder for icon */
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  background: #409EFF; /* Fallback icon color */
}

.preview-img {
    width: 100%;
    height: 100%;
    border-radius: 12rpx;
}

/* Consent */
.consent-section {
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
}
.consent-link {
    color: #409EFF; /* Or dark outline */
    text-decoration: underline;
    margin-left: 10rpx;
}

/* Submit Button */
.submit-btn {
  margin-top: 60rpx;
  width: 100% !important;
  height: 90rpx;
  line-height: 55rpx; /* Adjust based on padding */
  border-radius: 45rpx;
  background: linear-gradient(90deg, #FFB84D 0%, #FF8F1F 100%);
  color: white;
  font-size: 34rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(255, 143, 31, 0.3);
  border: none;
}
.submit-btn[disabled] {
    background: #ccc !important;
    color: #fff !important;
    box-shadow: none;
}
