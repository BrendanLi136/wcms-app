<!-- pages/list/list.wxml -->
<view class="container">
    <block wx:for="{{list}}" wx:key="id">
        <view class="item">
            <text class="time">{{item.createTime}}</text>
            <text class="status">{{item.statusTexto}}</text>
            <!-- Content based on type -->
            <text wx:if="{{type==='history'}}">Result: {{item.analysisResult}}</text>
            <text wx:if="{{type==='reminder'}}">Msg: {{item.content}}</text>
        </view>
    </block>
</view>
